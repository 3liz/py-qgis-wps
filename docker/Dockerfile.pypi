# vim: ft=dockerfile
ARG REGISTRY_PREFIX=''
ARG QGIS_VERSION=latest

FROM  ${REGISTRY_PREFIX}qgis-platform:${QGIS_VERSION}
MAINTAINER David Marteau <david.marteau@3liz.com>
LABEL Description="QGIS3 WPS service" Vendor="3liz.org" Version="1."

ARG pypi_server
ARG pypi_scheme=https

RUN apt-get update && apt-get install -y --no-install-recommends gosu \
     python3-shapely  \
     python3-psutil \
     && apt-get clean  && rm -rf /var/lib/apt/lists/* \
     && rm -rf /usr/share/man 

RUN pip3 install plotly  \
    simplejson \
    geojson    \
    scipy  \
    pandas \
    Jinja2 \
    && pip3 install --extra-index-url=$pypi_scheme://$pypi_server --trusted-host=$pypi_server --pre \
    py-qgis-wps \
    lizmap-api \
    pyqgiservercontrib-lizmap-access-policy \
    && rm -rf /root/.cache /root/.ccache

COPY /docker-entrypoint.sh /
RUN chmod 0755 /docker-entrypoint.sh

EXPOSE 8080

ENTRYPOINT ["/docker-entrypoint.sh"]


